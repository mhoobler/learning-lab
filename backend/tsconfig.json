{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "target": "es6",
    "types": ["node"],
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
